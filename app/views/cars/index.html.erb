<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Opis</th>
	  <th>Kategoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.body %></td>
		<td><%= car.category.name if car.category %></td>
        <td><%= link_to 'Wyświetl', car %></td>
        <td><%= link_to 'Edytuj', edit_car_path(car) %></td>
        <td><%= link_to 'Usuń', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy Samochód', new_car_path %>